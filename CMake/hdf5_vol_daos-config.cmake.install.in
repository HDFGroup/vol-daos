#-----------------------------------------------------------------------------
# Config file for compiling against the install directory
#-----------------------------------------------------------------------------
get_filename_component(HDF5_VOL_DAOS_SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------------
# User Options
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set(HDF5_VOL_DAOS_VERSION_STRING  @HDF5_VOL_DAOS_PACKAGE_VERSION@)
set(HDF5_VOL_DAOS_VERSION_MAJOR   @HDF5_VOL_DAOS_VERSION_MAJOR@)
set(HDF5_VOL_DAOS_VERSION_MINOR   @HDF5_VOL_DAOS_VERSION_MINOR@)
set(HDF5_VOL_DAOS_VERSION_PATCH   @HDF5_VOL_DAOS_VERSION_PATCH@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already built HDF5 DAOS as a subproject
#-----------------------------------------------------------------------------
if(NOT TARGET "hdf5_vol_daos" AND NOT HDF5_VOL_DAOS_INSTALL_SKIP_TARGETS)
  if(NOT TARGET "hdf5")
    include(@HDF5_DIR@/hdf5-config.cmake)
  endif()
  include(${HDF5_VOL_DAOS_SELF_DIR}/hdf5_vol_daos-targets.cmake)
endif()
